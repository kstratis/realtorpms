$('.content-swap').fadeOut('fast', function () {
  var response = $("<%= escape_javascript(resource.errors.empty? ? render('shared/ajax/created', locals: {resource: resource}) : render('shared/ajax/not_created', locals: {resource: resource}))%>").hide();
  $(this).replaceWith(response);
  $("#form-" + "<%= resource.errors.empty? ? 'success' : 'error' %>" ).fadeIn('fast');
  $('.back-button').returnOnClick("<%= Rails.application.routes.url_helpers.send("#{resource.class.to_s.downcase.pluralize}_path") %>");
});