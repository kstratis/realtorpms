<div id="form-success">
  <div class="card">
    <!-- .card-header -->
    <div class="card-header">
      <div><h2><%= t "#{locals[:resource].class.to_s.downcase.pluralize}.#{locals[:action]}.message" %></h2></div>
      <div>
        <h3><%= t "#{locals[:resource].class.to_s.downcase.pluralize}.#{locals[:action]}.message_feedback", brand: BRANDNAME.capitalize %></h3>
      </div>
      <div class="d-flex justify-content-center">
        <i class="pr-icon sm checkmark"> </i>
      </div>
      <div class="row d-flex justify-content-center mt-2">
        <div class="btn-group" role="group">
          <% if locals[:resource].class.to_s.downcase == 'invitation' %> <!-- Case 1: Invitations -->
            <%= link_to t("#{locals[:resource].class.to_s.downcase.pluralize}.#{locals[:action]}.add_another"),
                        Rails.application.routes.url_helpers.send("new_#{locals[:resource].class.to_s.downcase}_path"), class: 'btn btn-primary' %>
            <%= link_to t("users.#{locals[:action]}.list"),
                        Rails.application.routes.url_helpers.send("users_path"), class: 'btn btn-warning' %>
          <% else %> <!-- Case 1: General case -->
            <%= link_to t("#{locals[:resource].class.to_s.downcase.pluralize}.#{locals[:action]}.show"),
                        Rails.application.routes.url_helpers.send("#{locals[:resource].class.to_s.downcase}_path", locals[:resource]), class: 'btn btn-success' %>
            <%= link_to t("#{locals[:resource].class.to_s.downcase.pluralize}.#{locals[:action]}.edit"),
                        Rails.application.routes.url_helpers.send("edit_#{locals[:resource].class.to_s.downcase}_path", locals[:resource]), class: 'btn btn-warning' %>
            <%= link_to t("#{locals[:resource].class.to_s.downcase.pluralize}.#{locals[:action]}.add_another"),
                        Rails.application.routes.url_helpers.send("new_#{locals[:resource].class.to_s.downcase}_path"), class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>