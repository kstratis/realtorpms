<%= link_to user_path(current_user), class: 'dropdown-item' do %>
  <%= content_tag :span, nil, class: 'dropdown-icon oi oi-person' %> <%= t('navbar.profile') %>
<% end %>


<% if current_user.get_account_count > 1 || current_user.admin? %>
  <%= link_to account_list_url, class: 'dropdown-item' do %>
    <%= content_tag :span, nil, class: 'dropdown-icon oi oi-loop-circular' %> <%= t('navbar.switch') %>
  <% end %>
<% end %>

<div class="dropdown-divider"></div>

<%= link_to '#', class: 'dropdown-item' do %>
  <%= content_tag :span, nil, class: 'dropdown-icon oi oi-info' %> <%= t('navbar.help') %>
<% end %>

<%= link_to logout_path, class: 'dropdown-item', method: :delete do %>
  <%= content_tag :span, nil, class: 'dropdown-icon oi oi-account-logout' %> <%= t('navbar.logout') %>
<% end %>

