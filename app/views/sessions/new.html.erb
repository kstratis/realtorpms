<% provide(:title, 'Log in') %>

<!--<h1><%#= t 'sessions.greeting' %></h1>-->
<main class="auth">
  <header id="auth-header" class="auth-header" style="background-image: url(<%= asset_path 'background/hero_bg.png' %>);">
    <h1>
      <%= image_tag('landia_logo.svg', class: 'navbar-brand', height: "52", title: 'Landia') %>
    </h1>

    <p> <%= t('sessions.no_account')  %> <%= link_to t('sessions.sign_up_now'), new_account_path %></p>
<!--    <p> Don't have a account? <a href="auth-signup.html">Create One</a></p>-->
  </header>

  <!-- form -->
  <%= form_for(:session, url: login_path, html: {class: 'auth-form'}) do |f| %>
    <%#= render 'shared/error_messages' %>

    <!-- .form-group -->
    <div class="form-group">
      <div class="form-label-group">
        <%= f.email_field :email, class: 'form-control', placeholder: User.human_attribute_name("email") %>
        <%= f.label "email", User.human_attribute_name("email") %>
        <%#= f.label User.human_attribute_name("email") %>
      </div>
    </div>
    <!-- .form-group -->

    <!-- .form-group -->
    <div class="form-group">
      <div class="form-label-group">
        <%= f.password_field :password, class: 'form-control', placeholder: User.human_attribute_name("password") %>
        <%= f.label :password, User.human_attribute_name("password") %>
      </div>
    </div>
    <!-- /.form-group -->

    <!-- .form-group -->
    <div class="form-group">
      <%= f.submit t('sessions.login_button'), class: 'btn btn-lg btn-primary btn-block' %>
    </div>
    <!-- /.form-group -->

    <!-- .form-group -->
    <div class="form-group text-center">
      <div class="custom-control custom-control-inline custom-checkbox">
        <%= f.check_box(:remember_me, class: "custom-control-input", type: 'checkbox') %>
        <%= f.label(:remember_me, class: "custom-control-label") do %>
          <%= User.human_attribute_name("remember_me") %>
        <% end %>
      </div>
    </div>
    <!-- .form-group -->
  <% end %>

  <% if request.subdomain.blank? %>
    <p class="new_user_prompt"><%= t('sessions.new_user_prompt') %> <%= link_to t('sessions.sign_up_now'), new_account_url(subdomain: false) %></p>
  <% end %>

  <footer class="auth-footer">&copy; <%= Time.current.year %> <%= t('sessions.rights') %></footer>


</main>
