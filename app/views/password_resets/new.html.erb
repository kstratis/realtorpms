<% provide(:title, t('sessions.forgot_title')) %>

<main class="auth">
  <header id="auth-header" class="auth-header" style="background-image: url(<%= asset_path 'background/hero_bg.png' %>);">
    <h1>
      <%= image_tag('landia_logo.svg', class: 'navbar-brand', height: "52", title: 'Landia') %>
    </h1>

    <% content_for :heading do %>
      <p> <%= t('sessions.forgot_password_header') %></p>
    <% end %>
  </header>

  <% content_for :content do %>
    <!-- form -->
    <%= form_for(:password_reset, url: password_reset_request_create_path, html: {class: 'auth-form'}) do |f| %>

      <%#= render 'shared/error_messages' %>

      <!-- .form-group -->
      <div class="form-group">
        <div class="form-label-group">
          <%= f.email_field :email, class: 'form-control', placeholder: User.human_attribute_name("email"), required: true %>
          <%= f.label "email", User.human_attribute_name("email") %>
        </div>
      </div>
      <!-- .form-group -->

      <!-- .form-group -->
      <div class="form-group">
        <%= f.submit t('sessions.forgot_password_button'), class: 'btn btn-lg btn-primary btn-block' %>
      </div>
      <!-- /.form-group -->

      <!-- Restore link -->
      <%# unless request.subdomain.blank? %>
      <div class="text-center pt-1 pb-2">
        <%= link_to t('sessions.remembered_password'), login_url(subdomain: request.subdomain.blank? ? nil : request.subdomain) %>
      </div>
      <%# end %>
      <!-- /restore link -->

    <% end %>
  <% end %>

  <footer class="auth-footer">&copy; <%= Time.current.year %> <%= t('sessions.rights') %></footer>

</main>
