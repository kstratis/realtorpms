<% provide(:title, t('sessions.forgot_title')) %>

<% content_for :heading do %>
  <p> <%= t('sessions.forgot_password_header') %></p>
<% end %>

<% content_for :content do %>
  <!-- form -->
  <%= form_for(:password_reset, url: password_reset_request_create_path, html: {class: 'auth-form'}) do |f| %>

    <%#= render 'shared/error_messages' %>

    <!-- .form-group -->
    <div class="form-group">
      <div class="form-label-group">
        <%= f.email_field :email, class: 'form-control', placeholder: User.human_attribute_name("email"), required: true %>
        <%= f.label "email", User.human_attribute_name("email") %>
      </div>
    </div>
    <!-- .form-group -->

    <!-- .form-group -->
    <div class="form-group">
      <%= f.submit t('sessions.forgot_password_button'), class: 'btn btn-lg btn-primary btn-block' %>
    </div>
    <!-- /.form-group -->

    <!-- Restore link -->
    <%# unless request.subdomain.blank? %>
    <div class="text-center pt-1 pb-2">
      <%= link_to t('sessions.remembered_password'), login_url(subdomain: request.subdomain.blank? ? nil : request.subdomain) %>
    </div>
    <%# end %>
    <!-- /restore link -->

  <% end %>
<% end %>

