<% provide(:title, t('clients.show.heading')) %>

<%= render partial: 'layouts/breadcrumb', locals: {path: [{:title => t('settings.sidebar.breadcrumb'), :href => settings_path}, {title: '', :href => ''}], icon: 'house-colored'} %>

<div class="page-container">
  <div class="container">
    <div class="app-container">
      <!-- grid row -->
      <div class="row">
        <!-- grid column -->
        <div class="col-lg-4">
          <!-- .card -->
          <div class="card card-fluid">
            <h2 class="card-header"><%= t('settings.sidebar.title') %></h2><!-- .nav -->
            <nav class="nav nav-tabs anchor-support flex-column border-0">
              <a href="#cfields" class="nav-link active setting" data-toggle="tab" role="tab" aria-selected="true"><span class=""><i class="menu-icon fas fa-align-justify fa-fw"></i>&nbsp; <span class="d-none d-md-inline tab-text"><%= t('settings.sidebar.cfields') %></span></span>
              </a>
              <a href="#subscription" class="nav-link setting" data-toggle="tab" role="tab" aria-selected="false"><span class=""><i class="menu-icon fas fa-credit-card fa-fw"></i>&nbsp; <%= t('settings.sidebar.subscription') %></span>
              </a>
              <a href="#integrations" class="nav-link setting" data-toggle="tab" role="tab" aria-selected="false"><span class=""><i class="menu-icon fas fa-plug fa-fw"></i>&nbsp; <%= t('settings.sidebar.integrations') %></span>
              </a>
              <a href="#widget" class="nav-link setting" data-toggle="tab" role="tab" aria-selected="false"><span class=""><i class="menu-icon fas fa-code fa-fw"></i>&nbsp; <%= t('settings.sidebar.widget') %></span>
              </a>
            </nav><!-- /.nav -->

          </div><!-- /.card -->
        </div><!-- /grid column -->
        <!-- grid column -->
        <div class="col-lg-8">

          <div class="card card-fluid">
            <h2 class="card-header"><%= t('settings.sidebar.info') %></h2><!-- .card-body -->
            <div class="card-body">

              <div class="tab-content p-0" id="myTabContent">
                <div class="tab-pane fade show active" id="cfields" role="tabpanel" aria-labelledby="profile-tab">
                  <div class=" text-center">

                    <div class="col-12">
                      <div class="alert alert-primary has-icon" role="alert">
                        <div class="alert-icon">
                          <i class="fas fa-info"></i>
                        </div><%= t('settings.sidebar.cfields_subheader') %>
                      </div>
                    </div>

                    <div class="col-12">
                      <%= link_to edit_model_type_path(@users_id), class: "visual-picker visual-picker-md has-peek px-3" do %>
                        <!-- .visual-picker-figure -->
                        <div class="visual-picker-figure">
                          <!-- .visual-picker-content -->
                          <span class="visual-picker-content"><span class="tile tile-lg bg-info"><i class="fas fa-user"></i></span></span> <!-- /.visual-picker-content -->
                        </div><!-- /.visual-picker-figure -->
                        <!-- .visual-picker-peek -->
                        <span class="visual-picker-peek"><%= t('settings.sidebar.partners') %></span>
                      <% end %> <!-- /.visual-picker -->
                      <!-- .visual-picker -->
                      <%= link_to edit_model_type_path(@properties_id), class: "visual-picker visual-picker-md has-peek px-3" do %>
                        <!-- .visual-picker-figure -->
                        <div class="visual-picker-figure">
                          <!-- .visual-picker-content -->
                          <span class="visual-picker-content"><span class="tile tile-lg bg-danger"><i class="fas fa-home"></i></span></span> <!-- /.visual-picker-content -->
                        </div><!-- /.visual-picker-figure -->
                        <!-- .visual-picker-peek -->
                        <span class="visual-picker-peek"><%= t('settings.sidebar.properties') %></span>
                      <% end %> <!-- /.visual-picker -->
                      <!-- .visual-picker -->
                      <%= link_to edit_model_type_path(@clients_id), class: "visual-picker visual-picker-md has-peek px-3" do %>
                        <!-- .visual-picker-figure -->
                        <div class="visual-picker-figure">
                          <!-- .visual-picker-content -->
                          <span class="visual-picker-content"><span class="tile tile-lg bg-success"><i class="fas fa-users"></i></span></span> <!-- /.visual-picker-content -->
                        </div><!-- /.visual-picker-figure -->
                        <!-- .visual-picker-peek -->
                        <span class="visual-picker-peek"><%= t('settings.sidebar.clients') %></span>
                      <% end %> <!-- /.visual-picker -->
                      <!-- .visual-picker -->
                    </div>
                  </div>
                </div>
                <div class="tab-pane fade" id="subscription" role="tabpanel" aria-labelledby="subscription-tab">
                  <h2><%= t('settings.sidebar.under_construction') %></h2></div>
                <div class="tab-pane fade" id="integrations" role="tabpanel" aria-labelledby="integrations-tab">
                  <h2><%= t('settings.sidebar.under_construction') %></h2></div>
                <div class="tab-pane fade" id="widget" role="tabpanel" aria-labelledby="integrations-tab">
                  <h2><%= t('settings.sidebar.under_construction') %></h2></div>
              </div>

            </div><!-- /.card-body -->
          </div><!-- /.card -->
        </div><!-- /grid column -->

      </div>
    </div>
  </div>
</div>
</div>