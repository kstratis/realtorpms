<% content_for(:nested_settings_header) do %>
  <%= t('settings.sidebar.integrations.title') %>
<% end %>

<% content_for(:integrations) do %>
  <h2>Spitogatos</h2>
  <div class="col-12 col-lg-6 offset-lg-3 py-4">

    <%= form_for(@spitogatos, url: settings_integrations_spitogato_path, method: :put, html: { id: 'spitogatos-settings-form', class: 'js-validatable' }) do |f| %>
      <%= render 'accounts/settings/integrations/spitogatos/form', f: f %>
      <hr/>
      <div class="form-actions">
        <%= link_to t('properties.delete.delete_button'), settings_integrations_spitogato_path, :method => 'delete', data: { confirm: t('js.datatables.notifications.confirm_prompt') }, class: 'btn btn-outline-danger mr-auto' %>
        <button type="submit" class="btn btn-outline-primary ml-auto"><%= t('settings.sidebar.integrations.spitogatos.save') %></button>
      </div>
    <% end %>

  </div>
<% end %>
