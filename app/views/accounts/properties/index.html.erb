<p id="notice"><%= notice %></p>

<h1>Properties</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Price</th>
      <th>Size</th>

      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.description %></td>
        <td><%= property.price %></td>
        <td><%= property.size %></td>
        <td><%= property.user_id %></td>
        <% if owner? %> <td><%= link_to 'Show', property %></td> <% end %>
        <% if owner? %> <td><%= link_to 'Edit', edit_property_path(property) %></td> <% end %>
        <% if owner? %><td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td> <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if owner? %>
  <%= link_to 'New Property', new_property_path %>
<% end %>
