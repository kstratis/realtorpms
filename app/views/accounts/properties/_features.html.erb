<div class="table-responsive">
  <table class="table <%= classNames %>">
    <tbody>
    <% features.each do |key, value| %>
      <tr>
        <td class="align-middle nowrap">
          <div class="table-entry">
            <div class="table-icon-wrapper">
              <i class="pr-icon xs <%= value[:icon] %>"></i>
            </div>
            <% if value[:label] == 'pricepersize' %>
              <% if current_account.greek? %>
                <span class="align-middle">&nbsp;&nbsp;<%= t("activerecord.attributes.property.#{value[:label].to_s}_meters_title_html") %></span>
              <% else %>
                <span class="align-middle">&nbsp;&nbsp;<%= t("activerecord.attributes.property.#{value[:label].to_s}_feet_title_html") %></span>
              <% end %>
            <% else %>
              <span class="align-middle">&nbsp;&nbsp;<%= t("activerecord.attributes.property.#{value[:label].to_s}_title") %></span>
            <% end %>
          </div>
        </td>
        <td class="align-middle nowrap">
          <span><%= render_attribute(@property, key, value[:options], value[:renderfn]) %></span>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
