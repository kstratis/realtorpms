<div class="col-8 offset-2">
  <div class="form-group mb-4">
    <div class="form-label-group">


      <%#= f.select :name, options_from_collection_for_select(ModelType.all, :name, :localized_name), {}, class: 'form-control custom-select' %>


      <%#= f.select field.name,
                       class: 'form-control',
                       autocomplete: "off",
                       'data-parsley-group': "fieldset-7",
                       'data-parsley-required': field.required ? "true" : "false",
                       'data-parsley-required-message': t("js.validator.required") %>

      <%= f.select field.name, options_for_select(field.options.split(';').map {|option| [option, option]}, f.object[field.name]), {}, class: 'form-control custom-select' %>
      <%= f.label field.name %>

    </div>
  </div>
</div>