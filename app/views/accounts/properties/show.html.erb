<% provide(:title, 'Property: ' + @property.description) %>
<div class="center jumbotron pr-container">
  <div class="row">
    <div class="col-md-12">

      <div>
        <p id="notice"><%= notice %></p>
      </div>

      <div>
        <p>
          <strong>Description:</strong>
          <%= @property.description %>
        </p>
      </div>

      <div>
        <p>
          <strong>Assigned to:</strong>
          <% @property.users.each do |user| %>
            <p><%= link_to "#{user.first_name} #{user.last_name}", user_path(user)%></p>
          <% end %>
        </p>
      </div>

      <%= link_to 'Edit', edit_property_path(@property) %> |
      <%= link_to 'Back', properties_path %>


    </div>
  </div>

  <div class="clearfix"></div>
</div>





