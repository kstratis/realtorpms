<div class="form-row">

  <div class="col-md-4 mb-3">
    <div class="form-label-group">
      <%= f.select :field_type, %w{text_field check_box dropdown}, {}, class: 'form-control custom-select field-type-select' %>
      <%= f.label :field_type %>
    </div>
  </div>

  <div class="col-md-4 mb-3 d-block">
    <%= f.text_field :name,
                     class: 'form-control form-control-lg cfield-validatable', placeholder: EntityField.human_attribute_name("name"), 'data-parsley-required': true, 'data-parsley-required-message': t("js.validator.required") %>
  </div>


  <div class="col-md-3 mb-3 d-flex align-items-center">
    <div class="custom-control custom-checkbox app-checkbox">
      <%= f.check_box(:required, {class: "custom-control-input", type: 'checkbox'}) %>
      <%= f.label(:required, {class: 'custom-control-label'}) do %>
        <%= t("cfields.required") %>
      <% end %>
    </div>
  </div>

  <div class="col-md-1 mb-3 d-flex align-items-center">
    <%= f.hidden_field :_destroy %>
    <%= link_to '#', class: 'remove_fields' do %>
      <i class="fas fa-trash fa-fw"></i>
    <% end %>
  </div>

  <div class="col-md-8 mb-3 d-none">
    <%= f.text_field :options,
                     class: 'form-control form-control-lg field-options cfield-validatable', 'data-parsley-required': true, 'data-parsley-required-message': t("js.validator.required") %>
    <small class="form-text text-muted"><%= t('cfields.dropdown_feedback') %></small>
  </div>

</div>