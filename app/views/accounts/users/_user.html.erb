<%# user is automatically 'destructured' for us by the +render @users+ app/views/users/index.html.erb %>
<%= link_to user do %>
  <aside class="col-md-4">
    <section class="user_info user_info_card">
      <div class="user_info_avatar">
        <%= gravatar_for user %>
      </div>
      <div class="user_info_text">
        <span class="name"><%== user.first_name + '&nbsp;' + user.last_name %></span>
        <span class="email"><%= user.email %></span>
      </div>
      <% if current_user.is_sysadmin? && !current_user?(user) %>
          | <%= link_to 'delete', user, method: :delete,
                        data: { confirm: t('prompt')} %>
      <% end %>
    </section>
  </aside>
<% end %>
