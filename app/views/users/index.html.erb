<% provide(:title, 'Users Index') %>
<div class="center jumbotron pr-container">
  <div class="row">
    <div class="col-md-12">
      <% @users.each do |user| %>
        <%= link_to user do %>
          <aside class="col-md-4">
            <section class="user_info user_info_card">
              <div class="user_info_avatar">
                <%= gravatar_for user %>

              </div>
              <div class="user_info_text">
                <span class="name"><%== user.first_name + '&nbsp;' + user.last_name %></span>
                <span class="email"><%= user.email %></span>
              </div>
            </section>
          </aside>
         <% end %>
      <% end %>
    </div>
  </div>


</div>